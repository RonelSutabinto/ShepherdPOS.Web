services:
  blazorhero:
    build:
      context: /Users/ronelsutabinto/Documents/Source Code/Digital Design Course/Winter2023/DGL-309
        Capstone/ShepherdPOS.Web
      dockerfile: src/Server/Dockerfile
    container_name: ShpeherdPos.WebApp
    depends_on:
      db:
        condition: service_started
    environment:
      ASPNETCORE_Kestrel__Certificates__Default__Password: reallyStrongPwd123
      ASPNETCORE_Kestrel__Certificates__Default__Path: /https/aspnetapp.pfx
      ConnectionStrings__DefaultConnection: Server=localhost;Database=ShepherdPosDb;User=sa;Password=reallyStrongPwd123;MultipleActiveResultSets=true
    image: ShpeherdPos.WebApp
    ports:
    - published: 5005
      target: 5005
    - published: 5006
      target: 5006
    restart: on-failure
    volumes:
    - /Users/ronelsutabinto/.aspnet/https:/https:ro
  db:
    container_name: mssql
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: reallyStrongPwd123
    image: mcr.microsoft.com/mssql/server
version: '3.4'